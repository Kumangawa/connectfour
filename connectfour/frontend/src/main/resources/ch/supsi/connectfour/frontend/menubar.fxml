<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>

<MenuBar id="menuBar" fx:id="menuBar" xmlns="http://javafx.com/javafx/11.0.00" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.supsi.connectfour.frontend.MenuBar">
    <Menu mnemonicParsing="false" text="%ui.menu.file">
        <MenuItem fx:id="miNew" mnemonicParsing="false" onAction="#newGame" text="%ui.menuitem.new" />
        <MenuItem fx:id="miOpen" mnemonicParsing="false" onAction="#openGame" text="%ui.menuitem.open" />
        <SeparatorMenuItem mnemonicParsing="false" />
        <MenuItem fx:id="miSave" mnemonicParsing="false" onAction="#saveGame" text="%ui.menuitem.save" />
        <MenuItem fx:id="miSaveAs" mnemonicParsing="false" onAction="#saveGameAs" text="%ui.menuitem.saveas" />
        <SeparatorMenuItem mnemonicParsing="false" />
        <MenuItem fx:id="miQuit" mnemonicParsing="false" onAction="#quit" text="%ui.menuitem.quit" />
    </Menu>
    <Menu mnemonicParsing="false" text="%ui.menu.edit">
        <Menu mnemonicParsing="false" text="%ui.menu.edit.preferences">
            <Menu mnemonicParsing="false" text="%ui.menu.edit.preferences.colors">
                <MenuItem mnemonicParsing="false" onAction="#editColorsPlayer" text="%ui.menu.edit.preferences.colors.player.one" />
                <MenuItem mnemonicParsing="false" onAction="#editColorsAi" text="%ui.menu.edit.preferences.colors.player.two" />
            </Menu>
            <Menu mnemonicParsing="false" text="%ui.menu.edit.preferences.language">
                <MenuItem mnemonicParsing="false" onAction="#editLanguage" text="Deutsch - CH" />
                <MenuItem mnemonicParsing="false" onAction="#editLanguage" text="English - UK" />
                <MenuItem mnemonicParsing="false" onAction="#editLanguage" text="Italiano - CH" />
            </Menu>
            <MenuItem fx:id="miPath" mnemonicParsing="false" onAction="#editPath" text="%ui.menu.edit.preferences.path" />

            <Menu mnemonicParsing="false" text="%ui.menu.edit.preferences.symbols">
                <MenuItem fx:id="miSymbolPlayer" mnemonicParsing="false" onAction="#editsymbolPlayer" text="%ui.menu.edit.preferences.symbol.player.one" />
                <MenuItem fx:id="miSymbolAI" mnemonicParsing="false" onAction="#editsymbolAi" text="%ui.menu.edit.preferences.symbol.player.two" />
            </Menu>
        </Menu>
    </Menu>
    <Menu mnemonicParsing="false" text="%ui.menu.help">
        <MenuItem fx:id="miAbout" mnemonicParsing="false" onAction="#showAbout" text="%ui.menu.help.about" />
    </Menu>
</MenuBar>
